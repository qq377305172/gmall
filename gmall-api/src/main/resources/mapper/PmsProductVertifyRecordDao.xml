<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.gmall.dao.PmsProductVertifyRecordDao">

    <resultMap type="com.atguigu.gmall.entity.PmsProductVertifyRecord" id="PmsProductVertifyRecordMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="vertifyMan" column="vertify_man" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="detail" column="detail" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PmsProductVertifyRecordMap">
        select
          id, product_id, create_time, vertify_man, status, detail
        from gmall.pms_product_vertify_record
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PmsProductVertifyRecordMap">
        select
          id, product_id, create_time, vertify_man, status, detail
        from gmall.pms_product_vertify_record
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PmsProductVertifyRecordMap">
        select
          id, product_id, create_time, vertify_man, status, detail
        from gmall.pms_product_vertify_record
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="productId != null">
                and product_id = #{productId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="vertifyMan != null and vertifyMan != ''">
                and vertify_man = #{vertifyMan}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="detail != null and detail != ''">
                and detail = #{detail}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into gmall.pms_product_vertify_record(product_id, create_time, vertify_man, status, detail)
        values (#{productId}, #{createTime}, #{vertifyMan}, #{status}, #{detail})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update gmall.pms_product_vertify_record
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="vertifyMan != null and vertifyMan != ''">
                vertify_man = #{vertifyMan},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="detail != null and detail != ''">
                detail = #{detail},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from gmall.pms_product_vertify_record where id = #{id}
    </delete>

</mapper>