<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.gmall.dao.WmsWareOrderTaskDetailDao">

    <resultMap type="com.atguigu.gmall.entity.WmsWareOrderTaskDetail" id="WmsWareOrderTaskDetailMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="skuId" column="sku_id" jdbcType="INTEGER"/>
        <result property="skuName" column="sku_name" jdbcType="VARCHAR"/>
        <result property="skuNums" column="sku_nums" jdbcType="INTEGER"/>
        <result property="taskId" column="task_id" jdbcType="INTEGER"/>
        <result property="skuNum" column="sku_num" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WmsWareOrderTaskDetailMap">
        select
          id, sku_id, sku_name, sku_nums, task_id, sku_num
        from gmall.wms_ware_order_task_detail
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WmsWareOrderTaskDetailMap">
        select
          id, sku_id, sku_name, sku_nums, task_id, sku_num
        from gmall.wms_ware_order_task_detail
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="WmsWareOrderTaskDetailMap">
        select
          id, sku_id, sku_name, sku_nums, task_id, sku_num
        from gmall.wms_ware_order_task_detail
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="skuId != null">
                and sku_id = #{skuId}
            </if>
            <if test="skuName != null and skuName != ''">
                and sku_name = #{skuName}
            </if>
            <if test="skuNums != null">
                and sku_nums = #{skuNums}
            </if>
            <if test="taskId != null">
                and task_id = #{taskId}
            </if>
            <if test="skuNum != null">
                and sku_num = #{skuNum}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into gmall.wms_ware_order_task_detail(sku_id, sku_name, sku_nums, task_id, sku_num)
        values (#{skuId}, #{skuName}, #{skuNums}, #{taskId}, #{skuNum})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update gmall.wms_ware_order_task_detail
        <set>
            <if test="skuId != null">
                sku_id = #{skuId},
            </if>
            <if test="skuName != null and skuName != ''">
                sku_name = #{skuName},
            </if>
            <if test="skuNums != null">
                sku_nums = #{skuNums},
            </if>
            <if test="taskId != null">
                task_id = #{taskId},
            </if>
            <if test="skuNum != null">
                sku_num = #{skuNum},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from gmall.wms_ware_order_task_detail where id = #{id}
    </delete>

</mapper>