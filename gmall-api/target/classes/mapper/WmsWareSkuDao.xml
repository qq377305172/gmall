<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.gmall.dao.WmsWareSkuDao">

    <resultMap type="com.atguigu.gmall.entity.WmsWareSku" id="WmsWareSkuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="skuId" column="sku_id" jdbcType="INTEGER"/>
        <result property="warehouseId" column="warehouse_id" jdbcType="INTEGER"/>
        <result property="stock" column="stock" jdbcType="INTEGER"/>
        <result property="stockName" column="stock_name" jdbcType="VARCHAR"/>
        <result property="stockLocked" column="stock_locked" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WmsWareSkuMap">
        select
          id, sku_id, warehouse_id, stock, stock_name, stock_locked
        from gmall.wms_ware_sku
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WmsWareSkuMap">
        select
          id, sku_id, warehouse_id, stock, stock_name, stock_locked
        from gmall.wms_ware_sku
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="WmsWareSkuMap">
        select
          id, sku_id, warehouse_id, stock, stock_name, stock_locked
        from gmall.wms_ware_sku
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="skuId != null">
                and sku_id = #{skuId}
            </if>
            <if test="warehouseId != null">
                and warehouse_id = #{warehouseId}
            </if>
            <if test="stock != null">
                and stock = #{stock}
            </if>
            <if test="stockName != null and stockName != ''">
                and stock_name = #{stockName}
            </if>
            <if test="stockLocked != null">
                and stock_locked = #{stockLocked}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into gmall.wms_ware_sku(sku_id, warehouse_id, stock, stock_name, stock_locked)
        values (#{skuId}, #{warehouseId}, #{stock}, #{stockName}, #{stockLocked})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update gmall.wms_ware_sku
        <set>
            <if test="skuId != null">
                sku_id = #{skuId},
            </if>
            <if test="warehouseId != null">
                warehouse_id = #{warehouseId},
            </if>
            <if test="stock != null">
                stock = #{stock},
            </if>
            <if test="stockName != null and stockName != ''">
                stock_name = #{stockName},
            </if>
            <if test="stockLocked != null">
                stock_locked = #{stockLocked},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from gmall.wms_ware_sku where id = #{id}
    </delete>

</mapper>